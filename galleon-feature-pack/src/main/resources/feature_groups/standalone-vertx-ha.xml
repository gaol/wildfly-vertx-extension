<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="standalone-vertx-ha" xmlns="urn:jboss:galleon:feature-group:1.0">

    <feature spec="subsystem.vertx">
        <feature spec="subsystem.vertx.vertx">
            <param name="vertx" value="default" />
            <param name="alias" value="[vertx]" />
            <param name="clustered" value="true" />
            <param name="jgroups-channel" value="vertx" />
            <param name="option-name" value="clustered" />
        </feature>
        <feature spec="subsystem.vertx.vertx-option-file">
            <param name="vertx-option-file" value="clustered" />
            <param name="path" value="default-vertx-options.json" />
        </feature>
    </feature>

</feature-group-spec>