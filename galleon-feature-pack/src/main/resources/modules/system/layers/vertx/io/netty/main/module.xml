<module name="io.netty" xmlns="urn:jboss:module:1.9">
    <properties>
        <property name="jboss.api" value="private"/>
    </properties>

    <resources>
        <artifact name="${io.netty:netty-buffer}"/>
        <artifact name="${io.netty:netty-codec}"/>
        <artifact name="${io.netty:netty-codec-dns}"/>
        <artifact name="${io.netty:netty-codec-haproxy}"/>
        <artifact name="${io.netty:netty-codec-mqtt}"/>
        <artifact name="${io.netty:netty-codec-http}"/>
        <artifact name="${io.netty:netty-codec-http2}"/>
        <artifact name="${io.netty:netty-codec-socks}"/>
        <artifact name="${io.netty:netty-common}"/>
        <artifact name="${io.netty:netty-handler}"/>
        <artifact name="${io.netty:netty-handler-proxy}"/>
        <artifact name="${io.netty:netty-resolver}"/>
        <artifact name="${io.netty:netty-resolver-dns}"/>
        <artifact name="${io.netty:netty-transport}"/>
    </resources>

    <dependencies>
        <module name="java.logging"/>
        <module name="java.management"/>
        <module name="java.naming"/>
        <module name="java.xml"/>
        <!--WFLY-14219 Remove deprecated <module name="javax.api"/> -->
        <module name="sun.jdk"/>
        <module name="jdk.sctp"/>
        <module name="jdk.unsupported"/>
    </dependencies>
</module>
