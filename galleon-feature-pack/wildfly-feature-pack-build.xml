<!--<build xmlns="urn:wildfly:feature-pack-build:3.1" producer="org.wildfly.extension.vertx:wildfly-vertx-feature-pack">-->
<build xmlns="urn:wildfly:feature-pack-build:3.1" producer="wildfly-vertx@maven(org.jboss.universe:community-universe):current">
    <dependencies>
        <dependency group-id="org.wildfly" artifact-id="wildfly-ee-galleon-pack">
            <name>org.wildfly:wildfly-ee-galleon-pack</name>
            <packages inherit="false">
                <include name="docs"/>
                <exclude name="docs.examples" />
                <include name="appclient"/>
                <include name="bin"/>
                <include name="product.conf"/>
            </packages>
            <default-configs inherit="false">
                <exclude name="standalone.xml" model="standalone"/>
                <exclude name="standalone-ha.xml" model="standalone"/>
                <exclude name="standalone-full.xml" model="standalone"/>
                <exclude name="standalone-full-ha.xml" model="standalone"/>
                <exclude name="standalone-load-balancer.xml" model="standalone"/>
            </default-configs>
        </dependency>
    </dependencies>
    <default-packages>
        <package name="modules.all"/>
        <package name="docs.licenses.merge"/>
        <package name="layers.conf"/>
        <package name="docs.examples"/>
        <package name="default-vertx-options.json"/>
    </default-packages>
    <package-schemas>
        <group name="org.jboss.as"/>
        <group name="org.jboss.metadata"/>
        <group name="org.wildfly"/>
        <group name="org.wildfly.core"/>
        <group name="org.wildfly.security"/>
    </package-schemas>

    <config name="standalone-vertx.xml" model="standalone"/>
    <config name="standalone-vertx-ha.xml" model="standalone"/>
    <config name="standalone-vertx-full-ha.xml" model="standalone"/>
    <config name="standalone-vertx-mini.xml" model="standalone"/>

    <plugins>
        <plugin artifact="org.wildfly.galleon-plugins:wildfly-galleon-plugins"/>
    </plugins>

    <generate-feature-specs>
        <extensions>
            <standalone>
                <extension>org.wildfly.extension.vertx</extension>
            </standalone>
        </extensions>
    </generate-feature-specs>

</build>
